import java.util.*;
public class amount {
    public static void main(String[] args) {
        Scanner sc =new Scanner(System.in);
        int total =0;
        int v;
        while(true){
            System.out.println("Enter the amount :");
            v=sc.nextInt();
            if(v == 0)
            break;
            else
             total = total + v;
        }
        System.out.println("the total amount is :" +total);
    }
}

